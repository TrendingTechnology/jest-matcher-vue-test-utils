{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "strict": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "node",
      "jest"
    ],
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "*.d.ts",
    "src/**/*.ts",
    "test/**/*.ts",
    "test/fixtures/*.vue"
  ],
  "exclude": [
    "node_modules"
  ]
}
